<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.tum.ase.kleo.app.group.attendance.advertisement.GroupAdvertisementBroadcasterFragment"
    tools:layout_editor_absoluteY="81dp">


    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="254dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/groupAdBroadcasterIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/antenna_broadcast"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="164dp" />

        <TextView
            android:id="@+id/groupAdBroadcasterChooserLabel"
            android:layout_width="191dp"
            android:layout_height="23dp"
            android:text="@string/select_group_to_broadcast"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="164dp" />

        <Spinner
            android:id="@+id/groupAdBroadcasterChooser"
            style="@android:style/Widget.Material.Light.Spinner.Underlined"
            android:layout_width="208dp"
            android:layout_height="43dp"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="380dp" />

        <ToggleButton
            android:id="@+id/groupAdBroadcasterSwitchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="429dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
