<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/group_ad_scanner_list_item_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/group_ad_scanner_list_item_session_time_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_ad_scanner_list_item_session_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/group_ad_scanner_list_item_session_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_ad_scanner_list_item_session_location_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="at"
        app:layout_constraintBottom_toBottomOf="@+id/group_ad_scanner_list_item_session_time_txt"
        app:layout_constraintStart_toEndOf="@+id/group_ad_scanner_list_item_session_time_txt"
        app:layout_constraintTop_toTopOf="@+id/group_ad_scanner_list_item_session_time_txt" />

    <TextView
        android:id="@+id/group_ad_scanner_list_item_session_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/group_ad_scanner_list_item_session_location_at"
        app:layout_constraintStart_toEndOf="@+id/group_ad_scanner_list_item_session_location_at"
        app:layout_constraintTop_toTopOf="@+id/group_ad_scanner_list_item_session_location_at" />

</android.support.constraint.ConstraintLayout>